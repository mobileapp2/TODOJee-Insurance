<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <View
        android:id="@+id/view_square"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shimmer_circular_view" />

    <View
        android:id="@+id/view_firstline"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignStart="@+id/view_secondline"
        android:layout_alignLeft="@+id/view_secondline"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="@color/Battleship_Gray" />

    <View
        android:id="@+id/view_secondline"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/view_firstline"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_toEndOf="@+id/view_square"
        android:layout_toRightOf="@+id/view_square"
        android:background="@color/Battleship_Gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/view_secondline"
        android:layout_marginTop="12dp"
        android:background="@color/Battleship_Gray" />

</RelativeLayout>
    