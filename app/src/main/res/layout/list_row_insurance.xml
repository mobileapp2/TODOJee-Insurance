<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    app:cardElevation="7dp"
    app:cardBackgroundColor="@color/colorCard1"
    android:background="@color/colorCard1"
    android:padding="5dp"
    android:layout_margin="6dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/gradientcard2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_policy_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="16sp"
      />
    <TextView
        android:id="@+id/tv_InsuranceCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_startenddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
android:visibility="gone"
        android:paddingLeft="5dp"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@color/grey"-->
        <!--android:clickable="false" />-->


</LinearLayout>
</android.support.v7.widget.CardView>